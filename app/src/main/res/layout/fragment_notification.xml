<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">


    <View
        android:id="@+id/rectangle_2"
        android:layout_width="412dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#F7B8B5"/>

    <ImageView
        android:id="@+id/back1"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:background="@drawable/back_icon"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        android:textAppearance="@style/notification"
        android:textColor="#4A4A4A"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="160dp"
        android:gravity="center"/>

    <View
        android:id="@+id/group_22"
        android:layout_width="198.1dp"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/img_19"
        android:layout_marginLeft="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/notificatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="390dp"
        android:text="@string/notificatio"
        android:textAppearance="@style/notificatio"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/notificati2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="435dp"
        android:text="@string/notificati2"
        android:textAppearance="@style/notificati2"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/turn_on_pus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="490dp"
        android:text="@string/turn_on_pus"
        android:textAppearance="@style/turn_on_pus"
        android:gravity="center"
        android:clickable="true"/>

</FrameLayout>



